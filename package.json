{
	"name": "cmakesourcemanagerextension",
	"displayName": "CMakeSourceManagerExtension",
	"publisher": "ThomasVDP",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cmakesourcemanagerextension.addfiletocmake",
				"title": "Add file to cmake sources"
			},
			{
				"command": "cmakesourcemanagerextension.removefilefromcmake",
				"title": "Remove file from cmake sources"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "cmakesourcemanagerextension.addfiletocmake",
					"group": "cmakeextension@1"
				},
				{
					"command": "cmakesourcemanagerextension.removefilefromcmake",
					"group": "cmakeextension@2"
				}
			],
			"commandPalette": [
				{
					"command": "cmakesourcemanagerextension.addfiletocmake",
					"when": "never"
				},
				{
					"command": "cmakesourcemanagerextension.removefilefromcmake",
					"when": "never"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}